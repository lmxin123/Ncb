@using Framework.Auth;
@model LoginViewModel
@{
    ViewBag.Title = "用户登录";
}
@section styles{
    <link rel="stylesheet" href="~/content/login.css" type="text/css" media="screen" />
    <style>
        .content {
            margin-left: auto;
            min-height: 0;
            padding-bottom: 0;
            overflow: visible;
        }

        span {
            float: left;
        }
    </style>

}
<div class="login-wrapper">
    <img class="logo" src="~/Content/img/" width="350" alt="logo图片">
    <div class="box">
        <div class="content-wrap">
            <h6>登录</h6>
            <form id="loginForm" action="/user/login" method="post" role="form">
                @Html.HiddenFor(m => m.ReturnUrl, ViewData["ReturnUrl"])
                <div class="form-group">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.UserName), Value = "sa" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Password), Value = "123456" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="remember">
                    @Html.CheckBoxFor(m => m.RememberMe, new { @checked = "checked" })
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                <a class="btn btn-primary login" id="btnLogin" href="javascript:;">登   录</a>
            </form>
        </div>
    </div>
</div>