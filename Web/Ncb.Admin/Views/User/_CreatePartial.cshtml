@using Framework.Auth;
@model RegisterViewModel
<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{user.Id?'修改':'创建'}}用户</h4>
            </div>
            <div class="modal-body">
                <form id="userForm" method="post" class="form-horizontal" role="form">
                    @Html.HiddenFor(m => m.Id, new { ng_model = "user.Id" })
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@Html.DisplayNameFor(m => m.UserName)<span class="hdy-red">*</span>：</label>
                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", ng_model = "user.UserName" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@Html.DisplayNameFor(m => m.RoleId)<span class="hdy-red">*</span>：</label>
                        <div class="col-sm-7">
                            @Html.DropDownListFor(m => m.RoleId, (List<SelectListItem>)ViewBag.RoleId, "请选择角色", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group" ng-hide="user.Id">
                        <label class="col-sm-3 control-label">@Html.DisplayNameFor(m => m.Password)<span class="hdy-red">*</span>：</label>
                        <div class="col-sm-7">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", ng_model = "user.Password" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@Html.DisplayNameFor(m => m.PhoneNumber)：</label>
                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", ng_model = "user.PhoneNumber", placeholder = "格式如13988888888，0755-88888888-001" })
                            @Html.ValidationMessageFor(m => m.PhoneNumber)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@Html.DisplayNameFor(m => m.Email)：</label>
                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", ng_model = "user.Email" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@Html.DisplayNameFor(m => m.Remark)：</label>
                        <div class="col-sm-7">
                            @Html.TextAreaFor(m => m.Remark, new { @class = "form-control", ng_model = "user.Remark" })
                            @Html.ValidationMessageFor(m => m.Remark)
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnCreate" type="button" class="btn btn-primary">保 存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
            </div>
        </div>
    </div>
</div>