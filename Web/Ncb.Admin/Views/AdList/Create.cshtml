@{
    Layout = "~/Views/Shared/_LayoutTab.cshtml";
}
@section styles{
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/jQuery-File-Upload")
    <style>
        .files audio, .files video {
            width: 150px;
            min-width: 150px;
        }

        .media-left {
            width: 140px;
            min-width: 140px;
        }

        .media-right {
            vertical-align: middle;
        }

        .progress {
            height: 5px;
            margin-bottom: 0;
            margin-top: 5px;
        }
    </style>
}
@Html.Partial("_AdFormPartial")
@section scripts{
    @Scripts.Render("~/bundles/jQuery-File-Upload")
    <script src="~/Scripts/jquery.area.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.zh-CN.js"></script>
    <script src="~/Scripts/plugins/fileupload.js"></script>
    <script src="~/Scripts/page/page.adCreate.js"></script>
}