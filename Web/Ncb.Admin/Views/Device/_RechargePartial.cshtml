@model RechargeViewModel
<div class="modal fade" id="rechargeModal" tabindex="-1" role="dialog" aria-labelledby="rechargeModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">充值</h4>
            </div>
            <div class="modal-body">
                <form role="form" method="post" class="form-horizontal" id="rechargeForm">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@Html.LabelFor(m=>m.DeviceId)：</label>
                        <div class="col-sm-7">
                            <p class="form-control-static" ng-bind="rec.DeviceId"></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Amount)<span class="hdy-red">*</span>：</label>
                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.Amount, new { type = "number", step = "1", min = "0", @class = "form-control", ng_model = "rec.Amount" })
                            @Html.ValidationMessageFor(m => m.Amount)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">@Html.DisplayNameFor(m => m.ExpiryDate)<span class="hdy-red">*</span>：</label>
                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.ExpiryDate, new { @class = "form-control", ng_model = "rec.ExpiryDate" })
                            @Html.ValidationMessageFor(m => m.ExpiryDate)
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" ng-click="recharge($event)">充 值</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
            </div>
        </div>
    </div>
</div>